#!/usr/bin/env bash

set -e

header() {
    echo "==========================="
    echo "$@"
    echo "==========================="
}

header "Pulling changes"
git pull --ff-only origin $(git rev-parse --abbrev-ref HEAD)

header "Re-building docker"
docker-compose build

header "Restarting"
docker-compose stop
docker-compose up -d

header "Updating backend"
docker-compose exec backend composer up
